<p id="notice"><%= notice %></p>

<h1>Dogs</h1>

<table class="table table-hover" id="sales">
  <thead>
    <tr>
      <th class="text-center"><%= ta Dog, :name %></th>
      <th class="text-center"><%= ta Dog, :gender %></th>
      <th class="text-center"><%= ta Dog, :owner %></th>
      <th class="text-center"><%= ta Dog, :breed %></th>
      <th class="text-center"><%= ta Dog, :castrated %></th>
    </tr>
  </thead>
  <tbody>
  <% @dogs.each do |dog| %>
    <tr>
      <td><%= dog.name %></td>
      <td><%= dog.gender %></td>
      <td><%= dog.owner_name %></td>
      <td><%= dog.breed_name %></td>
      <td><%= dog.castrated %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @dogs %>
