            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          <a href="#" title="TileSport" class="navbar-brand navbar-right">TileSport</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-left navbar-nav">
            <li><%= link_to "PETSHOPS", root_url %></li>
          </ul>
        </div>
      </div>
    </header><!-- /header -->

    <div class="container">
      <div class="row">
        <%= yield %>
